.pagination {
	display: flex;
	justify-content: space-between;
	margin-top: 1em;
}

[id=toc],
.callout,
.warning,
.info,
.note,
.tip {
	position: relative;
	background: var(--color-accent2-light2);
	padding: 1.2rem 1rem .8rem;
	border-radius: .3rem;
	margin-top: 1.6em;
	margin-bottom: 1em;
	font-family: var(--font-sans);
	font-size: 80%;
	font-weight: 500;

	> :is(p, ul, ol, dl):where(:only-child, h4 + :last-child) {
		margin-block: 0;
	}

	&:not(:has(>h4))::after {
		content: var(--label);
	}

	& > h4,
	&::after {
		position: absolute;
		top: -1em;
		left: 2.5rem;
		color: var(--color-accent2-light2);
		margin-left: -2em;
		margin-bottom: 0;
	}
}

[id=toc] {
	z-index: 1;
	font-size: 75%;
	color: var(--color-gray-40);
	mix-blend-mode: multiply;

	& a {
		color: inherit;
	}

	@media (width > 1700px) {
		position: absolute;
		--min-header-height: 12.8rem;
		top: calc(2.5em + max(0em, var(--scrolltop, 0) * 1px - var(--min-header-height)));
		left: calc(var(--content-margin) + var(--content-width) + 1em);
		max-width: calc(var(--content-margin) - 2em);
		background: none;

		& > h4 {
			color: white;
		}
	}

	@media (width <= 1700px) {
		margin-top: 3em;
	}
}

.callout,
.warning,
.info,
.note,
.tip {
	@media (width > 600px) {
		padding-left: 4.5em;

		&::before {
			content: var(--icon);
			position: absolute;
			left: .5rem;
			top: 50%;
			transform: translateY(-50%);
			font: 180%/1 bootstrap-icons;
			background: white;
			padding: .25em .3em .35em;
			border-radius: 50%;
			color: var(--color-orange);
		}

		& > h4,
		&::after {
			left: 4.2rem;
		}
	}
}

.warning {
	--label: "Beware";
	--icon: "\F33A";
}

.info {
	--label: "Info";
	--icon: "\F434";
}

.tags-index {
	display: grid;
	grid-template-columns: repeat(auto-fill, minmax(10em, 1fr));
	gap: 0 3em;
}

.subtle-markers {
	& li::marker {
		color: var(--color-gray-60);
	}

	&[reversed] li::marker {
		color: hsl(var(--gray) 50% / calc(1 - var(--index) * .05));
	}
}

.posts-list {
	padding-inline-start: 0;

	& time {
		margin-left: .5em;
		color: var(--color-gray-medium);
		font-family: var(--font-sans);
		font-size: 75%;
		font-weight: 500;

		&::before {
			content: var(--icon-date);
			display: inline-block;
			margin-right: .3em;
			vertical-align: -.1em;
			font-family: bootstrap-icons;
		}
	}
}